<%= form_for(@style) do |f| %>
  <% if @style.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@style.errors.count, "error") %> prohibited this style from being saved:</h2>

      <ul>
      <% @style.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :remote_image_url, "or image URL" %><br />
    <%= f.text_field :remote_image_url %>
  </div>

  <div class="field">
    <%= f.label :exterior %><br />
    <%= f.check_box :exterior %>
  </div>
  <div class="field">
    <%= f.label :interior %><br />
    <%= f.check_box :interior %>
  </div>
  <div class="field">
    <%= f.label :culture %><br />
    <%= f.check_box :culture %>
  </div>
  <div class="field">
    <%= f.label :amenity %><br />
    <%= f.check_box :amenity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
